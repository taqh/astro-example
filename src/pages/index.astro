---
import Container from '@/components/Container.astro';
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import PostCard from '@/components/PostCard.astro';
import { SITE } from '@/utils/site';

const posts = await getCollection('posts');
---

<Layout title={SITE.TITLE} description={SITE.DESCRIPTION}>
  <Container class='border-t border-dashed min-h-[calc(100vh-201px)] py-16'>
    <ul
      class='grid justify-center gap-20 grid-cols-[repeat(auto-fill,minmax(0,_400px))] w-full'
    >
      {posts.map((post) => <PostCard entry={post} />)}
    </ul>
  </Container>
</Layout>
